      <p class="cart-whisper-popup-subtitle">{{ block.settings.success_subtitle }}</p>
    </div>

    <div class="cart-whisper-popup-divider"></div>

    <div class="cart-whisper-popup-recommendations"> 
      <div class="cart-whisper-popup-products" id="cart-whisper-popup-products">
        <!-- Products loaded dynamically -->
      </div>
    </div>

    <div class="cart-whisper-popup-actions">
      <button class="cart-whisper-popup-continue" onclick="cartWhisperClosePopup()">
        {{ block.settings.continue_text }}
      </button>
      <a href="/cart" class="cart-whisper-popup-checkout">
        {{ block.settings.checkout_text }}
      </a>
    </div>

    <!-- Watermark (shown for free users) -->
    <div id="cart-whisper-watermark" class="cart-whisper-watermark" style="display: none;">
      <span>ü§ñ Powered by <a href="https://cartwhisper.ai" target="_blank" rel="noopener">CartWhisper AI</a></span>
