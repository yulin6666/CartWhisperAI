      <div class="cart-whisper-popup-check">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="{{ block.settings.success_color }}" stroke-width="3">
          <path d="M20 6L9 17l-5-5"/>
        </svg>
