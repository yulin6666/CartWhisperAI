{% comment %}
  Cart Whisper AI - Add to Cart Popup
  This embed block shows a recommendation popup when items are added to cart
{% endcomment %}

<!-- Cart Whisper Popup Container -->
<div id="cart-whisper-popup"
     class="cart-whisper-popup-overlay"
     data-shop="{{ shop.permanent_domain }}"
     style="display: none;">

  <div class="cart-whisper-popup-modal">
    <button class="cart-whisper-popup-close" id="cart-whisper-popup-close-btn" aria-label="Close">
