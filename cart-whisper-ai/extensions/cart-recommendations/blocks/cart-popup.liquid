{% comment %}
  Cart Whisper AI - Add to Cart Popup
  This embed block shows a recommendation popup when items are added to cart
{% endcomment %}

<!-- Cart Whisper Popup Container -->
<div id="cart-whisper-popup"
     class="cart-whisper-popup-overlay"
     data-shop="{{ shop.permanent_domain }}"
     data-limit="{{ block.settings.limit }}"
     style="display: none;">

  <div class="cart-whisper-popup-modal">
    <button class="cart-whisper-popup-close" onclick="cartWhisperClosePopup()" aria-label="Close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>

    <div class="cart-whisper-popup-header">
      <div class="cart-whisper-popup-check">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="{{ block.settings.success_color }}" stroke-width="3">
          <path d="M20 6L9 17l-5-5"/>
        </svg>
      </div>
      <h2 class="cart-whisper-popup-title">{{ block.settings.success_title }}</h2>
      <p class="cart-whisper-popup-subtitle">{{ block.settings.success_subtitle }}</p>
    </div>

    <div class="cart-whisper-popup-divider"></div>

    <div class="cart-whisper-popup-recommendations">
      <!-- 缓存状态提示 -->
      <div id="cart-whisper-cache-warning" class="cart-whisper-cache-warning" style="display: none;">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#ff9800" stroke-width="2">
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
        </svg>
        <span>Showing cached recommendations</span>
      </div>

      <div class="cart-whisper-popup-products" id="cart-whisper-popup-products">
        <!-- Products loaded dynamically -->
      </div>
    </div>

    <div class="cart-whisper-popup-actions">
      <button class="cart-whisper-popup-continue" onclick="cartWhisperClosePopup()">
        {{ block.settings.continue_text }}
      </button>
      <a href="/cart" class="cart-whisper-popup-checkout">
        {{ block.settings.checkout_text }}
      </a>
    </div>
  </div>
</div>

