<script>
// CartWhisper: Á´ãÂç≥ËÆæÁΩÆ fetch Êã¶Êà™Âô®ÔºàÂú® IIFE ‰πãÂâçÔºâ
(function() {
  'use strict';

  console.log('[CartWhisper] Installing fetch interceptor...');

  // Â≠òÂÇ®ÂºπÁ™óÊòæÁ§∫ÂáΩÊï∞ÔºåÁ®çÂêéÁî±‰∏ª‰ª£Á†ÅËÆæÁΩÆ
  window._cartWhisperShowPopup = null;

  // Á´ãÂç≥Êã¶Êà™ fetch
  const originalFetch = window.fetch;
  window.fetch = async function(...args) {
    const url = typeof args[0] === 'string' ? args[0] : (args[0]?.url || '');
    console.log('[CartWhisper] Fetch intercepted:', url);

    const response = await originalFetch.apply(this, args);

    // Ê£ÄÊü•ÊòØÂê¶ÊòØÊ∑ªÂä†Ë¥≠Áâ©ËΩ¶ËØ∑Ê±Ç
    if (url.includes('/cart/add')) {
      console.log('[CartWhisper] *** CART ADD DETECTED ***');
      try {
        const clonedResponse = response.clone();
        const data = await clonedResponse.json();
        console.log('[CartWhisper] Cart add response data:', data);

        const productId = data.items?.[0]?.product_id || data.product_id;
        console.log('[CartWhisper] Extracted product ID:', productId);

        if (productId && window._cartWhisperShowPopup) {
          console.log('[CartWhisper] Triggering popup...');
          setTimeout(() => window._cartWhisperShowPopup(productId), 300);
        } else if (!window._cartWhisperShowPopup) {
          console.warn('[CartWhisper] Popup function not ready yet');
        }
      } catch (e) {
        console.error('[CartWhisper] Error parsing cart response:', e);
      }
    }

    return response;
  };

  // ‰πüÊã¶Êà™ XMLHttpRequest
  const originalXHROpen = XMLHttpRequest.prototype.open;
  const originalXHRSend = XMLHttpRequest.prototype.send;

  XMLHttpRequest.prototype.open = function(method, url) {
    this._cartWhisperUrl = url;
    this._cartWhisperMethod = method;
    return originalXHROpen.apply(this, arguments);
  };

  XMLHttpRequest.prototype.send = function(body) {
    const xhr = this;
    const url = this._cartWhisperUrl || '';

    console.log('[CartWhisper] XHR intercepted:', this._cartWhisperMethod, url);

    if (url.includes('/cart/add')) {
      console.log('[CartWhisper] *** XHR CART ADD DETECTED ***');
      this.addEventListener('load', function() {
        try {
          const data = JSON.parse(xhr.responseText);
          console.log('[CartWhisper] XHR cart response:', data);

          const productId = data.items?.[0]?.product_id || data.product_id;
          if (productId && window._cartWhisperShowPopup) {
            setTimeout(() => window._cartWhisperShowPopup(productId), 300);
          }
        } catch (e) {
          console.error('[CartWhisper] XHR parse error:', e);
        }
      });
    }

    return originalXHRSend.apply(this, arguments);
  };

  console.log('[CartWhisper] Fetch interceptor installed successfully!');
})();

// CartWhisper: ‰∏ªË¶ÅÂºπÁ™óÈÄªËæë
(function() {
  'use strict';

  const popup = document.getElementById('cart-whisper-popup');
  if (!popup) return;

  const shop = popup.dataset.shop;
  const limit = 6; // ËØ∑Ê±ÇÊúÄÂ§ßÊï∞ÈáèÔºåÂêéÁ´Ø‰ºöÊ†πÊçÆËÆ¢ÈòÖËÆ°ÂàíÈôêÂà∂ÂÆûÈôÖËøîÂõûÊï∞Èáè
  const productsContainer = document.getElementById('cart-whisper-popup-products');

  // ÂêéÁ´Ø API URLÔºàÁî®‰∫éËøΩË∏™Ôºâ
  const backendUrl = 'https://cartwhisperaibackend-production.up.railway.app';

  // ÂΩìÂâçÊ∫êÂïÜÂìÅ IDÔºàËß¶Âèë popup ÁöÑÂïÜÂìÅÔºâ
  let currentSourceProductId = null;

  // Ë∞ÉËØï‰ø°ÊÅØ
  console.log('[CartWhisper Popup] === DEBUG INFO ===');
  console.log('[CartWhisper Popup] Shop:', shop);
  console.log('[CartWhisper Popup] Limit:', limit);
  console.log('[CartWhisper Popup] Using direct backend connection');
  console.log('[CartWhisper Popup] Backend URL:', backendUrl);
  console.log('[CartWhisper Popup] =================');

  // ÂÖ≥Èó≠ÂºπÁ™ó
  window.cartWhisperClosePopup = function() {
    popup.classList.remove('active');
    setTimeout(() => {
      popup.style.display = 'none';
    }, 300);
  };

  // ÁÇπÂáªÈÅÆÁΩ©ÂÖ≥Èó≠
  popup.addEventListener('click', function(e) {
    if (e.target === popup) {
      cartWhisperClosePopup();
    }
  });

  // ESCÈîÆÂÖ≥Èó≠
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && popup.classList.contains('active')) {
      cartWhisperClosePopup();
    }
  });

  // ===== localStorage ÁºìÂ≠òÁÆ°ÁêÜÂô® =====
  const CACHE_PREFIX = 'cartwhisper_rec_';
  const CACHE_PLAN_KEY = 'cartwhisper_plan_level'; // Â≠òÂÇ®ÂΩìÂâçËÆ¢ÈòÖÁ∫ßÂà´
  const CACHE_TTL = 3600000; // 1Â∞èÊó∂ÔºàÊØ´ÁßíÔºâ

  // ‰ªé localStorage Ëé∑ÂèñÁºìÂ≠ò
  function getLocalCache(productId, maxRecommendations) {
    try {
      // ÁºìÂ≠òkeyÂåÖÂê´ËÆ¢ÈòÖÁ∫ßÂà´ÔºåÁ°Æ‰øù‰∏çÂêåÁ∫ßÂà´‰ΩøÁî®‰∏çÂêåÁºìÂ≠ò
      const key = CACHE_PREFIX + productId + '_' + maxRecommendations;
      const cached = localStorage.getItem(key);
      if (!cached) {
        console.log('[CartWhisper Cache] No local cache for product', productId, 'plan level:', maxRecommendations);
        return null;
      }

      const data = JSON.parse(cached);
      const age = Date.now() - data.timestamp;

      if (age > CACHE_TTL) {
        console.log('[CartWhisper Cache] Cache expired (age:', Math.round(age/1000), 's)');
        localStorage.removeItem(key);
        return null;
      }

      console.log('[CartWhisper Cache] ‚úì Cache hit! (age:', Math.round(age/1000), 's) plan level:', maxRecommendations);
      return data.recommendations;
    } catch (e) {
      console.error('[CartWhisper Cache] Error reading cache:', e);
      return null;
    }
  }

  // ‰øùÂ≠òÂà∞ localStorage
  function setLocalCache(productId, recommendations, maxRecommendations) {
    try {
      // ÁºìÂ≠òkeyÂåÖÂê´ËÆ¢ÈòÖÁ∫ßÂà´
      const key = CACHE_PREFIX + productId + '_' + maxRecommendations;
      const data = {
        recommendations: recommendations,
        timestamp: Date.now(),
        productId: productId,
        maxRecommendations: maxRecommendations
      };
      localStorage.setItem(key, JSON.stringify(data));
      console.log('[CartWhisper Cache] ‚úì Cached', recommendations.length, 'recommendations for plan level:', maxRecommendations);
    } catch (e) {
      console.error('[CartWhisper Cache] Error saving cache:', e);
    }
  }

  // Ê£ÄÊü•ËÆ¢ÈòÖÁ∫ßÂà´ÊòØÂê¶ÂèòÂåñÔºåÂ¶ÇÊûúÂèòÂåñÂàôÊ∏ÖÈô§ÊâÄÊúâÊé®ËçêÁºìÂ≠ò
  function checkAndClearCacheOnPlanChange(maxRecommendations) {
    try {
      const savedPlanLevel = localStorage.getItem(CACHE_PLAN_KEY);
      const currentPlanLevel = String(maxRecommendations);

      if (savedPlanLevel && savedPlanLevel !== currentPlanLevel) {
        console.log('[CartWhisper Popup] Plan level changed from', savedPlanLevel, 'to', currentPlanLevel, '- clearing all caches');
        // Ê∏ÖÈô§ÊâÄÊúâÊé®ËçêÁºìÂ≠ò
        const keys = Object.keys(localStorage).filter(k => k.startsWith(CACHE_PREFIX));
        keys.forEach(key => localStorage.removeItem(key));
      }

      // ‰øùÂ≠òÂΩìÂâçËÆ¢ÈòÖÁ∫ßÂà´
      localStorage.setItem(CACHE_PLAN_KEY, currentPlanLevel);
    } catch (e) {
      console.error('[CartWhisper Popup] Failed to check plan change:', e);
    }
  }

  // ËøΩË∏™Â±ïÁ§∫ÔºàÂΩìÊé®ËçêÊòæÁ§∫Êó∂Ôºâ
  function trackImpression(sourceProductId, recommendations) {
    if (!recommendations || recommendations.length === 0) return;

    const targetProductIds = recommendations.map(r => {
      if (r.numericId) return String(r.numericId);
      if (r.id) return String(r.id).replace('gid://shopify/Product/', '');
      return null;
    }).filter(Boolean);

    if (targetProductIds.length === 0) return;

    const payload = {
      shop: shop,
      sourceProductId: String(sourceProductId),
      targetProductIds: targetProductIds
    };
    console.log('[CartWhisper Popup] Tracking impression:', payload);

    fetch(`${backendUrl}/api/tracking/impression`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(payload)
    })
    .then(r => r.json())
    .then(data => console.log('[CartWhisper Popup] Impression result:', data))
    .catch(e => console.log('[CartWhisper Popup] Impression tracking failed:', e.message));
  }

  // ËøΩË∏™ÁÇπÂáªÔºàÂΩìÁî®Êà∑ÁÇπÂáª AddÔºâ
  function trackClick(sourceProductId, targetProductId) {
    const cleanSourceId = String(sourceProductId).replace('gid://shopify/Product/', '');
    const cleanTargetId = String(targetProductId).replace('gid://shopify/Product/', '');

    const payload = {
      shop: shop,
      sourceProductId: cleanSourceId,
      targetProductId: cleanTargetId
    };
    console.log('[CartWhisper Popup] Tracking click:', payload);

    fetch(`${backendUrl}/api/tracking/click`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(payload)
    })
    .then(r => r.json())
    .then(data => console.log('[CartWhisper Popup] Click result:', data))
    .catch(e => console.log('[CartWhisper Popup] Click tracking failed:', e.message));
  }

  // Ëé∑ÂèñÊé®ËçêÔºàÂ∏¶ÈáçËØïÂíåÈôçÁ∫ßÔºâ
  async function fetchRecommendations(productId) {
    // 1. ÂÖà‰ªéÂêéÁ´ØËé∑ÂèñÊúÄÊñ∞Êï∞ÊçÆ‰ª•Ê£ÄÊü•ËÆ¢ÈòÖÁ∫ßÂà´
    const fetchUrl = `${backendUrl}/api/public/recommendations/${encodeURIComponent(shop)}/${productId}?limit=${limit}`;
    console.log('[CartWhisper Popup] Fetching from backend to check plan:', fetchUrl);

    const maxRetries = 2;

    for (let attempt = 0; attempt <= maxRetries; attempt++) {
      try {
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 8000); // 8ÁßíË∂ÖÊó∂

        console.log(`[CartWhisper] Attempt ${attempt + 1}/${maxRetries + 1}`);

        const response = await fetch(fetchUrl, {
          method: 'GET',
          headers: { 'Accept': 'application/json' },
          signal: controller.signal,
        });

        clearTimeout(timeoutId);
        console.log('[CartWhisper] Response status:', response.status);

        if (!response.ok) {
          const text = await response.text();
          console.error('[CartWhisper] Error response:', text);
          throw new Error(`HTTP ${response.status}`);
        }

        const data = await response.json();
        console.log('[CartWhisper] Got recommendations:', data);

        let recommendations = data.recommendations || [];
        const maxRecommendations = data.maxRecommendations || 1;
        const showWatermark = data.showWatermark !== false; // ÈªòËÆ§ÊòæÁ§∫Ê∞¥Âç∞

        // üî• Ê£ÄÊü•ËÆ¢ÈòÖÁ∫ßÂà´ÂèòÂåñÔºåÂ¶ÇÊûúÂèòÂåñÂàôÊ∏ÖÈô§ÊóßÁºìÂ≠ò
        checkAndClearCacheOnPlanChange(maxRecommendations);

        // üî• Ê£ÄÊü•ÁºìÂ≠òÔºàÂú®Á°ÆËÆ§ËÆ¢ÈòÖÁ∫ßÂà´ÂêéÔºâ
        const cached = getLocalCache(productId, maxRecommendations);
        if (cached && cached.length > 0) {
          console.log('[CartWhisper] Using cached data after plan check');
          // Âç≥‰Ωø‰ΩøÁî®ÁºìÂ≠òÔºå‰πüË¶ÅÊõ¥Êñ∞Ê∞¥Âç∞ÊòæÁ§∫
          const watermarkEl = document.getElementById('cart-whisper-watermark');
          if (watermarkEl) {
            watermarkEl.style.display = showWatermark ? 'block' : 'none';
          }
          // ÊòæÁ§∫ÁºìÂ≠òË≠¶Âëä
          const warningEl = document.getElementById('cart-whisper-cache-warning');
          if (warningEl) warningEl.style.display = 'flex';
          return cached;
        }

        // üî• ÂâçÁ´ØÂèåÈáçÊ£ÄÊü•ÔºöÁ°Æ‰øù‰∏çË∂ÖËøáËÆ¢ÈòÖËÆ°ÂàíÈôêÂà∂
        if (recommendations.length > maxRecommendations) {
          console.log(`[CartWhisper] Front-end trimming from ${recommendations.length} to ${maxRecommendations}`);
          recommendations = recommendations.slice(0, maxRecommendations);
        }

        console.log(`[CartWhisper] Final recommendations count: ${recommendations.length} (max: ${maxRecommendations})`);
        console.log(`[CartWhisper] Show watermark: ${showWatermark}`);

        // ÊòæÁ§∫/ÈöêËóèÊ∞¥Âç∞
        const watermarkEl = document.getElementById('cart-whisper-watermark');
        if (watermarkEl) {
          watermarkEl.style.display = showWatermark ? 'block' : 'none';
        }

        // ‰øùÂ≠òÂà∞Êú¨Âú∞ÁºìÂ≠òÔºàÂåÖÂê´ËÆ¢ÈòÖÁ∫ßÂà´Ôºâ
        if (recommendations.length > 0) {
          setLocalCache(productId, recommendations, maxRecommendations);
        }

        // ÈöêËóèÁºìÂ≠òË≠¶ÂëäÔºàËøôÊòØÊñ∞Êï∞ÊçÆÔºâ
        const warningEl = document.getElementById('cart-whisper-cache-warning');
        if (warningEl) warningEl.style.display = 'none';

        return recommendations;

      } catch (error) {
        const errorMsg = error.name === 'AbortError' ? 'Request timeout' : error.message;
        console.error(`[CartWhisper] Attempt ${attempt + 1}/${maxRetries + 1} failed:`, errorMsg);

        // ÊúÄÂêé‰∏ÄÊ¨°Â§±Ë¥•ÔºåËøîÂõûÁ©∫Âπ∂ÊòæÁ§∫ÂèãÂ•ΩÊèêÁ§∫
        if (attempt === maxRetries) {
          console.error('[CartWhisper] All retries failed, showing empty recommendations');
          return [];
        }

        // Á≠âÂæÖÂêéÈáçËØïÔºàÊåáÊï∞ÈÄÄÈÅøÔºâ
        const delay = Math.min(1000 * Math.pow(2, attempt), 3000);
        console.log(`[CartWhisper] Retrying in ${delay}ms...`);
        await new Promise(resolve => setTimeout(resolve, delay));
      }
    }

    return [];
  }

  // Ê∑ªÂä†Âà∞Ë¥≠Áâ©ËΩ¶
  window.cartWhisperPopupAdd = async function(button, handle, numericId) {
    console.log('[CartWhisper Popup] Add button clicked, handle:', handle, 'numericId:', numericId);

    // ËøΩË∏™ÁÇπÂáª
    if (currentSourceProductId && numericId) {
      trackClick(currentSourceProductId, numericId);
    }

    button.disabled = true;
    button.textContent = '{{ block.settings.adding_text }}';

    try {
      // Áî® handle Ëé∑Âèñ‰∫ßÂìÅ‰ø°ÊÅØ
      const productResponse = await fetch(`/products/${handle}.js`);
      if (!productResponse.ok) {
        throw new Error('Product not found');
      }
      const product = await productResponse.json();
      const variantId = product.variants[0]?.id;

      console.log('[CartWhisper] Variant ID:', variantId);

      if (variantId) {
        const addResponse = await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items: [{ id: variantId, quantity: 1 }] })
        });

        if (addResponse.ok) {
          button.textContent = '{{ block.settings.added_text }}';
          document.dispatchEvent(new CustomEvent('cart:refresh'));
          // 2ÁßíÂêéÊÅ¢Â§çÊåâÈíÆÁä∂ÊÄÅ
          setTimeout(() => {
            button.disabled = false;
            button.textContent = '{{ block.settings.button_text }}';
          }, 2000);
        } else {
          throw new Error('Failed to add to cart');
        }
      }
    } catch (error) {
      console.error('[CartWhisper] Failed to add to cart:', error);
      button.textContent = '{{ block.settings.button_text }}';
      button.disabled = false;
    }
  };

  // Ê∏≤ÊüìÊé®Ëçê
  function renderRecommendations(recommendations) {
    if (!recommendations || recommendations.length === 0) {
      productsContainer.innerHTML = '<p class="cart-whisper-popup-loading">{{ block.settings.no_recommendations_text }}</p>';
      return;
    }

    const moneyFormat = window.Shopify?.moneyFormat || '${{amount}}';

    productsContainer.innerHTML = recommendations.map(rec => {
      const price = formatMoney(rec.price);
      const imageUrl = rec.image || 'https://via.placeholder.com/80x80?text=No+Image';
      const productUrl = rec.handle ? `/products/${rec.handle}` : `/products/${rec.numericId}`;
      const addHandle = rec.handle || rec.numericId;
      // Áî®‰∫éËøΩË∏™ÁöÑÊï∞Â≠ó ID
      const trackingId = rec.numericId || (rec.id ? rec.id.replace('gid://shopify/Product/', '') : '');

      // ËøáÊª§Êé®ËçêÁêÜÁî±ÔºöÂ¶ÇÊûúÂåÖÂê´‰∏≠Êñá|Ëã±ÊñáÊ†ºÂºèÔºåÂè™‰øùÁïôËã±ÊñáÈÉ®ÂàÜ
      let reasoning = rec.reasoning || '';
      if (reasoning.includes('|')) {
        reasoning = reasoning.split('|')[1].trim();
      }

      return `
        <div class="cart-whisper-popup-product">
          <a href="${productUrl}">
            <img class="cart-whisper-popup-product-image" src="${imageUrl}" alt="${escapeHtml(rec.title)}" loading="lazy">
          </a>
          <div class="cart-whisper-popup-product-info">
            ${reasoning ? `<p class="cart-whisper-popup-product-reason">${escapeHtml(reasoning)}</p>` : ''}
            <a href="${productUrl}" style="text-decoration:none;color:inherit;">
              <h4 class="cart-whisper-popup-product-title">${escapeHtml(rec.title)}</h4>
            </a>
            <div class="cart-whisper-popup-product-bottom">
              <span class="cart-whisper-popup-product-price">${price}</span>
              <button class="cart-whisper-popup-add-btn" onclick="event.stopPropagation(); cartWhisperPopupAdd(this, '${addHandle}', '${trackingId}')">
                {{ block.settings.button_text }}
              </button>
            </div>
          </div>
        </div>
      `;
    }).join('');

    // ËøΩË∏™Â±ïÁ§∫
    if (currentSourceProductId) {
      trackImpression(currentSourceProductId, recommendations);
    }
  }

  function formatMoney(price) {
    // Áõ¥Êé•Ê†ºÂºèÂåñ‰ª∑Ê†ºÔºå‰∏çÈúÄË¶ÅËΩ¨Êç¢
    const amount = parseFloat(price).toFixed(2);
    return `$${amount}`;
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text || '';
    return div.innerHTML;
  }

  // ÊòæÁ§∫ÂºπÁ™ó
  async function showPopup(productId) {
    console.log('[CartWhisper Popup] showPopup called with productId:', productId);

    // ‰øùÂ≠òÊ∫êÂïÜÂìÅ ID Áî®‰∫éËøΩË∏™
    currentSourceProductId = productId;

    console.log('[CartWhisper Popup] Showing popup...');
    productsContainer.innerHTML = '<p class="cart-whisper-popup-loading">{{ block.settings.loading_text }}</p>';
    popup.style.display = 'flex';

    requestAnimationFrame(() => {
      popup.classList.add('active');
    });

    const recommendations = await fetchRecommendations(productId);
    console.log('[CartWhisper Popup] Got recommendations for popup:', recommendations);
    renderRecommendations(recommendations);
  }

  // Ê≥®ÂÜå showPopup ÂáΩÊï∞Âà∞ÂÖ®Â±ÄÔºå‰æõÊã¶Êà™Âô®‰ΩøÁî®
  window._cartWhisperShowPopup = showPopup;
  console.log('[CartWhisper] Popup function registered');

})();
</script>

