{% comment %}
  Cart Whisper AI - Add to Cart Popup
  This embed block shows a recommendation popup when items are added to cart
{% endcomment %}

<!-- Cart Whisper Popup Container -->
<div id="cart-whisper-popup"
     class="cart-whisper-popup-overlay"
     data-shop="{{ shop.permanent_domain }}"
     style="display: none;">

  <div class="cart-whisper-popup-modal">
    <button class="cart-whisper-popup-close" onclick="cartWhisperClosePopup()" aria-label="Close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>

    <div class="cart-whisper-popup-header">
      <div class="cart-whisper-popup-check">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="{{ block.settings.success_color }}" stroke-width="3">
