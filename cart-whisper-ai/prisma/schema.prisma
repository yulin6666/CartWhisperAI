// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

// 订阅信息表 - 存储Shopify订阅状态
model Subscription {
  id                    String    @id @default(cuid())
  shop                  String    @unique // 店铺域名

  // 订阅信息
  plan                  String    @default("free") // free, pro
  status                String    @default("active") // active, cancelled, expired

  // Shopify订阅ID（仅Pro版本有）
  shopifySubscriptionId String?   @unique
  shopifyChargeId       String?

  // 测试模式标记
  isTestMode            Boolean   @default(false)

  // 订阅时间
  currentPeriodStart    DateTime?
  currentPeriodEnd      DateTime?
  trialEndsAt           DateTime?
  cancelledAt           DateTime?

  // 时间戳
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([shop, status])
  @@index([plan])
}

// 商品推荐匹配表 - 存储商品A对应推荐商品B的信息
model ProductRecommendation {
  id                  String    @id @default(cuid())
  shop                String    // 店铺域名

  // 源商品信息 (商品A)
  sourceProductId     String    // Shopify Product GID
  sourceProductTitle  String
  sourceProductPrice  Float
  sourceProductCategory String?
  sourceProductImage  String?

  // 推荐商品信息 (商品B)
  recommendedProductId    String    // Shopify Product GID
  recommendedProductHandle String?  // 商品 handle，用于前端链接
  recommendedProductTitle String
  recommendedProductPrice Float
  recommendedProductCategory String?
  recommendedProductVendor String?
  recommendedProductImage String?

  // 推荐信息
  similarity          Float     // 相似度分数 0-1
  reasoning           String?   // AI生成的推荐理由
  priority            Int       @default(0)  // 推荐优先级，数字越大优先级越高

  // 状态
  isActive            Boolean   @default(true)

  // 时间戳
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // 索引优化查询性能
  @@index([shop, sourceProductId])
  @@index([shop, isActive])
  @@unique([shop, sourceProductId, recommendedProductId])
}
